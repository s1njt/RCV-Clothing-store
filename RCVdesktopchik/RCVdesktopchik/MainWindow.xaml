<Window x:Class="RCVdesktopchik.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RCVdesktopchik"
        mc:Ignorable="d"
        Title="Авторизация" Height="600" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="125*"/>
            <RowDefinition Height="264*"/>
            <RowDefinition Height="195*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="RСV" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="100" FontWeight="Bold"/>

        <StackPanel Grid.Row="1" VerticalAlignment="Center">
            <StackPanel>
                <TextBox Text="ЛОГИН" FontSize="30" x:Name="LoginTextBox" Margin="50,0,50,0"/>
                <Border Height="2" Background="Black" Margin="50,0,50,0"/>
            </StackPanel>
            <StackPanel Margin="0,20,0,0">
                <PasswordBox Password="ПАРОЛЬ" x:Name="PasswodInputBox" FontSize="30" Margin="50,0,50,0"/>
                <Border Height="2" Background="Black" Margin="50,0,50,0"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="2" VerticalAlignment="Center">
            <Button Height="30" Content="ВОЙТИ" x:Name="LoginButton" Click="LoginButton_Click" FontSize="20" Margin="50,0,50,0"/>
            <Button Height="30" Content="ВЫХОД" FontSize="20" Margin="50,0,50,0"/>
        </StackPanel>
    </Grid>
</Window>
